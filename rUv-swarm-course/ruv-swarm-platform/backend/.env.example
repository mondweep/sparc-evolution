# Database
DATABASE_URL=postgresql://ruv_swarm_user:ruv_swarm_password@localhost:5432/ruv_swarm_db

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME="rUv-Swarm Learning Platform"
BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://localhost:3000"]

# Email Configuration (optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@ruv-swarm.io
EMAILS_FROM_NAME="rUv-Swarm Platform"

# SuperUser
FIRST_SUPERUSER=admin@ruv-swarm.io
FIRST_SUPERUSER_PASSWORD=changethis

# Celery
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# WebAssembly
WASM_RUNTIME_PATH=/app/wasm
WASM_MAX_MEMORY=1073741824

# Monitoring
SENTRY_DSN=

# File Storage
UPLOAD_PATH=/app/uploads
MAX_UPLOAD_SIZE=10485760